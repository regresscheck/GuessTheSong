extends layout

block scripts
    script(src="https://cdn.socket.io/socket.io-1.3.6.js")
    script(src="/js/game.js")
    script roomId= #{room.id};

block content
    p= room.id
    p= room.name
    form(name="message_form", id="message_form", onsubmit="return sendMessage();")
        input(type="text", name="message", id="message", autofocus="autofocus", placeholder="Message")
        input(type="submit", value="Send")
    div(id="chat", style="white-space: pre") ---
    button(onclick="startGame()") Start game
    table
        thead
            tr
                th Player
                th Score
        tbody(id="score")
