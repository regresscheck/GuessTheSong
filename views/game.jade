extends layout

block scripts
    script(src="https://cdn.socket.io/socket.io-1.3.6.js")
    script(src="/js/game.js")
    script room_id= #{room.id};

block content
    p= room.id
    p= room.settings.room_name
    form(name="message_form", id="message_form", onsubmit="return send_message();")
        input(type="text", name="message", id="message", autofocus="autofocus", placeholder="Message")
        input(type="submit", value="Send")
    div(id="chat", style="white-space: pre") zaebis
